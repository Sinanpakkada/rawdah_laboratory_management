<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="test_type_view_tree" model="ir.ui.view">
        <field name="name">test.type.tree</field>
        <field name="model">test.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="test_amount" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record id="test_type_view_form" model="ir.ui.view">
        <field name="name">test.type.form</field>
        <field name="model">test.type</field>
        <field name="arch" type="xml">
            <form string="Test Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Complete Blood Count"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="test_amount" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Parameters" name="parameters">
                            <field name="parameter_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="normal_range"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_test_type" model="ir.actions.act_window">
        <field name="name">Test Types</field>
        <field name="res_model">test.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new Test Type
          </p>
          <p>
            Define laboratory tests and their parameters here. For example, "Blood Sugar Test" with a parameter for "Glucose".
          </p>
        </field>
    </record>
</odoo>
