<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="test_result_view_tree" model="ir.ui.view">
        <field name="name">test.result.tree</field>
        <field name="model">test.result</field>
        <field name="arch" type="xml">
            <tree string="Test Results">
                <field name="result_no"/>
                <field name="patient_id"/> <!-- Changed from patient_name -->
                <field name="result_date"/>
                <field name="state" widget="badge"
                       decoration-success="state in ('done','billed')"
                       decoration-warning="state == 'in_progress'"/>
            </tree>
        </field>
    </record>

    <record id="test_result_view_form" model="ir.ui.view">
        <field name="name">test.result.form</field>
        <field name="model">test.result</field>
        <field name="arch" type="xml">
            <form string="Lab Test Result">
                <header>
                    <button name="action_save_and_bill" type="object" string="Print Bill"
                            class="btn-success" invisible="state != 'draft'"/>
                    <button name="action_print_result" type="object" string="Print Result"
                            class="btn-primary" invisible="state != 'billed'"/>
                    <button name="action_cancel_test" type="object" string="Cancel"
                            invisible="state not in ('draft', 'billed', 'in_progress')"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft"
                            invisible="state != 'cancel'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,billed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="result_no" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" options="{'no_create_edit': False}" readonly="state != 'draft'"/>
                            <!-- Optionally show related fields -->
                            <field name="age" readonly="1" />
                            <field name="gender" readonly="1"/>
                            <field name="phone" readonly="1"/>
                            <field name="email" readonly="1"/>
                            <field name="test_ids" widget="many2many_tags" options="{'no_create_edit': True}" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <!-- Remove phone/email if stored on partner, or use related -->
                            <field name="result_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Result Lines" name="result_lines">
                            <field name="result_line_ids" readonly="state != 'draft'">
                                <tree editable="bottom">
                                    <field name="parameter_id" readonly="1"/>
                                    <field name="result_value"/>
                                    <field name="normal_range" readonly="1"/>
                                    <field name="uom_id" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_test_result" model="ir.actions.act_window">
        <field name="name">Test Results</field>
        <field name="res_model">test.result</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
