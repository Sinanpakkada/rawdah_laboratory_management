<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- test result tree-->
    <record id="test_result_view_tree" model="ir.ui.view">
        <field name="name">test.result.tree</field>
        <field name="model">test.result</field>
        <field name="arch" type="xml">
            <tree>
                <field name="result_no"/>
                <field name="patient_name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_test_result_form" model="ir.ui.view">
        <field name="name">test.result.form</field>
        <field name="model">test.result</field>
        <field name="arch" type="xml">
            <form string="Lab Test Result">
                <header>
                    <button name="action_generate_bill" type="object" string="Generate Bill" class="btn-primary"/>
                    <button name="action_generate_result" type="object" string="Generate Result" class="btn-success"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,bill,result"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="result_no"/>
                            <field name="result_date"/>
                            <field name="patient_name"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="state" readonly="True"/>
                        </group>
                    </group>

                    <!-- Test Lines like Sale Order Lines -->
                    <group string="Test Lines">
                        <field name="test_ids">
                            <tree editable="bottom">
                                <field name="test_type_name" invisible="1"/>
                            </tree>
                        </field>
                    </group>

                    <!-- Result Lines like Order Line Details -->
                    <group string="Result Lines">
                        <field name="result_line_ids">
                            <tree editable="bottom">
                                <field name="parameter_id" readonly="1"/>
                                <field name="result_value"/>
                                <field name="test_unit" readonly="1"/>
                                <field name="reference_range" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_test_result" model="ir.actions.act_window">
        <field name="name">Lab Results</field>
        <field name="res_model">test.result</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>