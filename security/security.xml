<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!-- This creates a new category in the Users settings page -->
        <record id="module_category_laboratory" model="ir.module.category">
            <field name="name">Laboratory</field>
            <field name="description">User access levels for the Laboratory management module</field>
            <field name="sequence">20</field>
        </record>
        <!-- Group for Laboratory User -->
        <record id="group_lab_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="rawdah_laboratory_management.module_category_laboratory"/>
            <!-- This group implies that a lab user is also a regular internal user -->
            <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
        </record>
        <!-- Group for Laboratory Manager -->
        <record id="group_lab_manger" model="res.groups">
            <field name="name">Manger</field>
            <field name="category_id" ref="rawdah_laboratory_mangement.module_category_laboratory"/>
            <!-- A Manager is also a User -->
            <field name="implied_ids" eval="[(4,ref('group_lab_user'))]"/>
            <!-- This gives the manager all administrative rights for this app -->
            <field name="users" eval="[(4,ref('base.user_root')),(4,ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>