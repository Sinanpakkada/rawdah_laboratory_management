<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="module_category_laboratory" model="ir.module.category">
            <field name="name">Laboratory</field>
            <field name="description">User access levels for the Laboratory management module</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_lab_user" model="res.groups">
            <field name="name">Lab User</field>
            <field name="category_id" ref="rawdah_laboratory_management.module_category_laboratory"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_lab_manager" model="res.groups">
            <field name="name">Lab Manager</field>
            <field name="category_id" ref="rawdah_laboratory_management.module_category_laboratory"/>
            <field name="implied_ids" eval="[(4, ref('rawdah_laboratory_management.group_lab_user'))]"/>
        </record>
    </data>
</odoo>
